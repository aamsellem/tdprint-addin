<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
           xsi:type="TaskPaneApp">

  <!-- Identifiant unique de l'add-in (générez un nouveau GUID pour la production) -->
  <Id>a1b2c3d4-e5f6-7890-abcd-ef1234567890</Id>

  <!-- Version de l'add-in -->
  <Version>1.0.0.0</Version>

  <!-- Nom de l'éditeur -->
  <ProviderName>TD Print</ProviderName>

  <!-- Paramètres par défaut -->
  <DefaultLocale>fr-FR</DefaultLocale>

  <!-- Nom affiché de l'add-in -->
  <DisplayName DefaultValue="TD Print Variables"/>

  <!-- Description de l'add-in -->
  <Description DefaultValue="Insérez facilement les variables TD Print dans vos documents Word par glisser-déposer ou clic."/>

  <!-- URL de l'icône haute résolution pour AppSource -->
  <IconUrl DefaultValue="https://localhost:3000/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://localhost:3000/assets/icon-80.png"/>

  <!-- URL du support -->
  <SupportUrl DefaultValue="https://www.example.com/support"/>

  <!-- Domaines autorisés -->
  <AppDomains>
    <AppDomain>https://localhost:3000</AppDomain>
  </AppDomains>

  <!-- Applications Office supportées -->
  <Hosts>
    <Host Name="Document"/>
  </Hosts>

  <!-- Version minimale requise de l'API Office.js -->
  <Requirements>
    <Sets>
      <Set Name="WordApi" MinVersion="1.1"/>
    </Sets>
  </Requirements>

  <!-- Paramètres par défaut du Task Pane -->
  <DefaultSettings>
    <SourceLocation DefaultValue="https://localhost:3000/taskpane.html"/>
  </DefaultSettings>

  <!-- Permissions requises -->
  <Permissions>ReadWriteDocument</Permissions>

  <!-- Surcharges de version pour les commandes du ruban -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Document">
        <DesktopFormFactor>
          <!-- Groupe de fonctions -->
          <FunctionFile resid="Functions.Url"/>

          <!-- Point d'extension pour le ruban -->
          <ExtensionPoint xsi:type="PrimaryCommandSurface">
            <OfficeTab id="TabHome">
              <Group id="TDPrintGroup">
                <Label resid="GroupLabel"/>
                <Icon>
                  <bt:Image size="16" resid="Icon.16x16"/>
                  <bt:Image size="32" resid="Icon.32x32"/>
                  <bt:Image size="80" resid="Icon.80x80"/>
                </Icon>

                <!-- Bouton pour ouvrir le Task Pane -->
                <Control xsi:type="Button" id="TaskpaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>ButtonId1</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- Ressources -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://localhost:3000/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://localhost:3000/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://localhost:3000/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Functions.Url" DefaultValue="https://localhost:3000/taskpane.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://localhost:3000/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="TD Print"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Variables"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Ouvrir le panneau des variables TD Print pour insérer des placeholders dans votre document."/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>
